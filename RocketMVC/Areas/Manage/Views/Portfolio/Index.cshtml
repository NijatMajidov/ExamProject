@model List<Portfolio>
@{
    int count = 0;
}
<h1>
    Portfolios
    <a class="btn btn-primary" asp-action="create">Create</a>
</h1>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Image</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.Id</td>

                    <td>
                        <img src="~/uploads/portfolios/@item.ImageUrl" width="100" height="100" alt="image" />
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-controller="Portfolio" asp-route-id="@item.Id">Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Portfolio" asp-route-id="@item.Id">Delete</a>
                    </td>
                    </tr>
            }
        </tbody>
    </table>
</div>
